<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:background="@drawable/reportbg"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Title"
        android:textSize="35sp"
        android:id="@+id/textTitle"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text = "Author: Someone"
        android:id="@+id/textAuthor"
        android:textSize="20sp"
        android:layout_below="@+id/textTitle"
        android:layout_marginLeft="50sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Time: ??:??"
        android:id="@+id/textTime"
        android:textSize="20sp"
        android:layout_below="@+id/textAuthor"
        android:layout_marginLeft="50sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Room: 404"
        android:id="@+id/textRoom"
        android:textSize="20sp"
        android:layout_below="@+id/textTime"
        android:layout_marginLeft="50sp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:inputType="none|textMultiLine"
        android:focusable="false"
        android:clickable="true"
        android:id="@+id/textReport"
        android:layout_below="@+id/textRoom"
        android:layout_above="@+id/NoteButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text = ""
        android:background="@drawable/textborder"
        android:scrollbars = "vertical"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note"
        android:textSize="25sp"
        android:id="@+id/NoteButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>